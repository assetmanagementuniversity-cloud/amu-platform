rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // Helper Functions
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isCompanyTrainingManager(companyId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/companies/$(companyId))
          .data.company_training_manager_user_id == request.auth.uid;
    }

    // ============================================
    // Users Collection
    // ============================================

    match /users/{userId} {
      // Users can read and update their own profile
      allow read, update: if isOwner(userId);
      // Any authenticated user can create their profile
      allow create: if isAuthenticated();
      // Never allow deletion (audit trail)
      allow delete: if false;
    }

    // ============================================
    // Companies Collection
    // ============================================

    match /companies/{companyId} {
      // Training manager can read their company
      allow read: if isCompanyTrainingManager(companyId);
      // Any authenticated user can create a company
      allow create: if isAuthenticated();
      // Only training manager can update
      allow update: if isCompanyTrainingManager(companyId);
      // Never allow deletion
      allow delete: if false;
    }

    // ============================================
    // Courses Collection (Public Read)
    // ============================================

    match /courses/{courseId} {
      // Anyone can read courses
      allow read: if true;
      // Only via Cloud Functions (admin)
      allow write: if false;
    }

    // ============================================
    // Modules Collection (Public Read)
    // ============================================

    match /modules/{moduleId} {
      // Anyone can read modules
      allow read: if true;
      // Only via Cloud Functions (admin)
      allow write: if false;
    }

    // ============================================
    // Enrolments Collection
    // ============================================

    match /enrolments/{enrolmentId} {
      // Only the enrolled user can read/write their enrolments
      allow read, write: if isAuthenticated() &&
        resource.data.enrolment_user_id == request.auth.uid;
      // Allow create if user is creating their own enrolment
      allow create: if isAuthenticated() &&
        request.resource.data.enrolment_user_id == request.auth.uid;
    }

    // ============================================
    // Conversations Collection
    // ============================================

    match /conversations/{conversationId} {
      // Only conversation owner can read
      allow read: if isAuthenticated() &&
        resource.data.conversation_user_id == request.auth.uid;
      // Write only via Cloud Functions
      allow write: if false;

      // Messages Subcollection
      match /messages/{messageId} {
        // Only conversation owner can read messages
        allow read: if isAuthenticated() &&
          get(/databases/$(database)/documents/conversations/$(conversationId))
            .data.conversation_user_id == request.auth.uid;
        // Write only via Cloud Functions
        allow write: if false;
      }
    }

    // ============================================
    // Conversation Summaries Collection
    // ============================================

    match /conversation_summaries/{summaryId} {
      // Only via Cloud Functions
      allow read, write: if false;
    }

    // ============================================
    // Certificates Collection
    // ============================================

    match /certificates/{certificateId} {
      // Owner can read their certificates
      allow read: if isAuthenticated() &&
        resource.data.certificate_user_id == request.auth.uid;
      // Write only via Cloud Functions
      allow write: if false;
    }

    // ============================================
    // Referrals Collection
    // ============================================

    match /referrals/{referralId} {
      // Referrer or referred user can read
      allow read: if isAuthenticated() &&
        (resource.data.referral_referrer_user_id == request.auth.uid ||
         resource.data.referral_referred_user_id == request.auth.uid);
      // Write only via Cloud Functions
      allow write: if false;
    }

    // ============================================
    // Payments Collection
    // ============================================

    match /payments/{paymentId} {
      // Only payment owner can read
      allow read: if isAuthenticated() &&
        resource.data.payment_user_id == request.auth.uid;
      // Write only via Cloud Functions
      allow write: if false;
    }

    // ============================================
    // Karma Transactions Collection
    // ============================================

    match /karma_transactions/{transactionId} {
      // Only transaction owner can read
      allow read: if isAuthenticated() &&
        resource.data.transaction_user_id == request.auth.uid;
      // Write only via Cloud Functions
      allow write: if false;
    }

    // ============================================
    // All Other Collections - No Direct Access
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
